@model HealthWebApp.Models.Person.PersonIndexModel

@{
    ViewBag.Title = "Patient Index";
}

<h3>Patient List</h3>

<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="alert-success">
                <th>Id #</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Extension</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Civil Status</th>
                <th>Address</th>
                <th>Barangay</th>
                <th>Contact #</th>
                <th>Email</th>
                <th>PhilHealth ID</th>
                <th>Father</th>
                <th>Mother</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="alert-info">
            @if (@Model != null)
            {
               @foreach (var patient in @Model.People)
                {
                    <tr>
                        <td id="PatientIcon"><a asp-controller="Person" asp-action="Details" asp-route-id="@patient.Id"> @patient.Id</a></td>
                        <td>@patient.LastName</td>
                        <td>@patient.FirstName</td>
                        <td>@patient.MiddleName</td>
                        <td>@patient.ExtensionName</td>
                        <td>@patient.DateOfBirth</td>
                        <td>@patient.Sex</td>
                        <td>@patient.CivilStatus</td>
                        <td>@patient.Address</td>
                        <td>@patient.Barangay</td>
                        <td>@patient.ContactNumber</td>
                        <td>@patient.EmailAddress</td>
                        <td>@patient.PhilHealthID</td>
                        <td>@patient.Father</td>
                        <td>@patient.Mother</td>
                        <td id="PatientIcon"><a asp-controller="Person" asp-action="Edit" asp-route-id="@patient.Id"> Edit</a></td>
                        <td id="PatientIcon"><a asp-controller="Person" asp-action="Details" asp-route-id="@patient.Id"> Details</a></td>

                    </tr>
                }

            }

        </tbody>
    </table>
</div>

<div>
    <a asp-controller="Person" asp-action="Create">Create new Patient record.</a>
</div>
