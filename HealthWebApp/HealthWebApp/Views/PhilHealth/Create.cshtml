@using HealthWebApp.Data.EntityModel.PhilHealth
@model HealthWebApp.Models.PhilHealth.PhilHealth.PhilHealthCreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="Person" asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Create new PhilHealthId for @Model.NameOfMember</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="PhilHealthId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhilHealthId" class="form-control" />
                <span asp-validation-for="PhilHealthId" class="text-danger"></span>
            </div>
        </div>
        
        @foreach (StatusType statusType in Enum.GetValues(typeof(StatusType)))
        {
           <label>
                <input asp-for="StatusType" type="radio" value="@statusType" /> 
                @statusType
           </label>
        }

        @foreach (TypeOfMembership typeOfMembership in Enum.GetValues(typeof(TypeOfMembership)))
        {
           <label>
                <input asp-for="Category" type="radio" value="@typeOfMembership" /> 
                @typeOfMembership
           </label>
        }

        @foreach (TypeOfSponsorship typeOfSponsorship in Enum.GetValues(typeof(TypeOfSponsorship)))
        {
           <label>
                <input asp-for="Sponsored" type="radio" value="@typeOfSponsorship" /> 
                @typeOfSponsorship
           </label>
        }

        @foreach (IPP iPP in Enum.GetValues(typeof(IPP)))
        {
           <label>
                <input asp-for="Individual" type="radio" value="@iPP" /> 
                @iPP
           </label>
        }

        @foreach (EmployerType employerType in Enum.GetValues(typeof(EmployerType)))
        {
           <label>
                <input asp-for="EmployerType" type="radio" value="@employerType" /> 
                @employerType
           </label>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Lifetime" />
                    <label asp-for="Lifetime">Lifetime</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DateAssigned" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateAssigned" class="form-control" />
                <span asp-validation-for="DateAssigned" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ExpirationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}