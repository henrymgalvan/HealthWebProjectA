@model HealthWebApp.Models.HouseholdMember.HouseholdMemberCreateModel
@using HealthWebApp.Data.EntityModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create new Household Member </h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PersonId" class="col-md-2 control-label">Person</label>
            <div class="col-md-10">
                <select asp-for="PersonId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListOfPerson, "Id", "LastName"))"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="HouseholdProfileId" class="col-md-2 control-label">Household Profile Id</label>
            <div class="col-md-10">
                <select asp-for="HouseholdProfileId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListOfHouseholdProfile, "Id", "ProfileId" ))"></select>
                <span asp-validation-for="HouseholdProfileId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="RelationToHouseholdHead" class="col-md-2 control-label">Relation To Head</label>
            <div class="col-md-10">
                <select asp-for="RelationToHouseholdHead" class="form-control" asp-items="Html.GetEnumSelectList<RelationToHouseholdHead>()"></select>
                <span asp-validation-for="RelationToHouseholdHead" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
